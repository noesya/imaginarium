<%= content_for :title, @image %>

<p>Espace : <%= link_to @image.space, [:admin, @image.space] %></p>

<% if @image.user.present? %>
  <p>Utilisateur : <%= link_to @image.user, [:admin, @image.user] %></p>
<% end %>

<p><%= link_to show_image_url(@image.space.slug, @image), show_image_url(@image.space.slug, @image), target: :_blank %></p>

<%= image_tag @image.generated, class: 'img-thumbnail' %>

<div class="row mt-5">
  <div class="col-md-6">
    <h2 class="h4 mb-4">AimÃ© par <%= @image.likes_count %> utilisateurs</h2>
    <table class="table">
      <thead>
        <tr>
          <td>ID</td>
          <td>Date</td>
        </tr>
      </thead>
      <tbody>
        <% @image.likes.each do |like| %>
          <tr>
            <td>
              <% if like.user %>
                <%= link_to like.user, [:admin, like.user] %>
              <% else %>
                Utilisateur sans cookie
              <% end %>
            </td>
            <td><%= t like.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h2 class="h4 mb-4">SignalÃ© par <%= @image.blames_count %> utilisateurs</h2>
    <% if @image.banned? %>
      <p class="badge text-bg-danger">Image bannie</p>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <td>ID</td>
          <td>Date</td>
        </tr>
      </thead>
      <tbody>
        <% @image.blames.each do |blame| %>
          <tr>
            <td>
              <% if blame.user %>
                <%= link_to blame.user, [:admin, blame.user] %>
              <% else %>
                Utilisateur sans cookie
              <% end %>
            </td>
            <td><%= t blame.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>