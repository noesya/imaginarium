<% if image.blacklisted? %>
  <span class="badge text-bg-danger position-absolute top-0 end-0 m-1">Image bannie</span>
<% elsif image.whitelisted? %>
  <span class="badge bg-info position-absolute top-0 end-0 m-1">Image validée</span>
<% elsif image.banned? %>
  <span class="badge bg-warning position-absolute top-0 end-0 m-1">Image signalée</span>
<% end %>
<%= link_to [:admin, image] do %>
  <% if image.generated.attached? %>
    <%= kamifusen_tag image.generated, class: 'img-fluid' %>
  <% else %>
    Image non générée
  <% end %>
<% end %>