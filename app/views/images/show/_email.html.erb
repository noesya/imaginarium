<% if @ask_for_email %>
  <p><%= t 'form.ask_for_email' %></p>
  <%= simple_form_for current_user, :html=> { class: 'form' } do |f| %>
    <%= f.input :email, label: false, class: 'form-control', placeholder: t('form.email.placeholder')  %>
    <%= f.submit t('form.set_email'), class: 'btn btn-primary mt-3' %>
  <% end %>
<% end %>