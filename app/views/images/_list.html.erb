<div class="d-flex flex-wrap print">
  <% images.each_with_index do |image, index| %>
    <div class="image col-6 col-md-4 col-lg-3 col-xl-2">
      <div class="position-relative">
        <span class="badge bg-white text-dark position-absolute top-0 end-0 m-1">
          <i class="bi bi-heart"></i>
          <%= image.likes_count %> 
        <span>
      </div>
      <%= link_to image_path(id: image.id) do %>
        <%= kamifusen_tag image.generated, class: 'img-fluid', alt: image %>
      <% end %>
    </div>
    <% if index % 12 == 11 %>
      </div><div class="d-flex flex-wrap print">
    <% end %>
  <% end %>
</div>