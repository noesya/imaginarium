<%= content_for :title, 'Imaginarium' %>

<%= image_tag 'logo.svg', class: 'logo' %>

<%= link_to "New image", new_image_path, class: 'position-fixed m-4 btn btn-primary' %>

<div class="row g-0">
  <% @images.each do |image| %>
    <div class="col-md-2">
      <%= link_to image do %>
        <%= image_tag image.generated, class: 'img-fluid' %>
      <% end %>
    </div>
  <% end %>
</div>

