<%= content_for :title, @image %>

<h1 class="text-center my-3"><%= link_to @space, show_space_path(@space.slug) %></h1>

<div class="text-center">
  <%= image_tag @image.generated, class: 'img-fluid img-thumbnail' %>
  <p><%= @image.prompt %></p>
  <%= link_to like_image_path(@space.slug, @image.id), class: 'btn btn-light' do %>  
    <% if @image.liked? @user %>
      <i class="bi bi-balloon-heart-fill"></i>
    <% else %>
      <i class="bi bi-balloon-heart"></i>
    <% end %>
    <%= @image.likes_count %> 
  <% end %>
  <%= link_to blame_image_path(@space.slug, @image.id), class: 'btn btn-light' do %>  
    <% if @image.blamed? @user %>
      <i class="bi bi-exclamation-circle-fill"></i>
      Vous avez signalé ce contenu comme inapproprié
    <% else %>
      <i class="bi bi-exclamation-circle"></i>
      Signaler ce contenu comme inapproprié
    <% end %>
  <% end %>
</div>