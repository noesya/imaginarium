<h1><%= @space.name %></h1>

<div class="mb-4">
  <%= simple_form_for Image.new, url: generate_image_path do |f| %>
    <%= f.input :prompt, as: :string %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
</div>

<div class="row g-0">
  <% @space.images.each do |image| %>
    <div class="col-md-2">
      <%= link_to show_image_path(@space.slug, image.id) do %>
        <%= image_tag image.generated, class: 'img-fluid' %>
      <% end %>
    </div>
  <% end %>
</div>