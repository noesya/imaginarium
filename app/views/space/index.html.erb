<%= content_for :title, @space %>

<h1 class="text-center my-3"><%= @space %></h1>

<div class="row mb-4">
  <div class="offset-md-4 col-md-4">
    <%= simple_form_for Image.new, url: generate_image_path do |f| %>
      <% @questions.each do |question| %>
        <div>
          <%= question %><br>
          <input type="text" name="question[<%= question.id %>]">
        </div>
      <% end %>
      <%= f.submit class: 'btn btn-primary mt-2' %>
    <% end %>
  </div>
</div>

<div class="row g-0">
  <% @images.each do |image| %>
    <div class="col-md-2">
      <%= link_to show_image_path(@space.slug, image.id) do %>
        <%= kamifusen_tag image.generated, class: 'img-fluid', alt: image %>
      <% end %>
    </div>
  <% end %>
</div>